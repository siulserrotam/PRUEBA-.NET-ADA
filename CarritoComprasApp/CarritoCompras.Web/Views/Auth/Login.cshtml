@model CarritoCompras.Web.Models.Usuario

@{
    ViewData["Title"] = "Login";
}

<h2 class="mb-4">Iniciar Sesi√≥n</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-controller="Auth" asp-action="Login" method="post">
    <div class="form-group mb-3">
        <label asp-for="UsuarioLogin" class="form-label"></label>
        <input asp-for="UsuarioLogin" class="form-control" />
        <span asp-validation-for="UsuarioLogin" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Clave" class="form-label"></label>
        <input asp-for="Clave" class="form-control" type="password" />
        <span asp-validation-for="Clave" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Ingresar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
