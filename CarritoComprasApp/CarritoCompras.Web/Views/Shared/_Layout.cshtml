@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Carrito ADA</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Carrito ADA</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item"><a class="nav-link" href="/admin">Panel Admin</a></li>
                            <li class="nav-item"><a class="nav-link" href="/admin/historial">Historial</a></li>
                            <li class="nav-item"><a class="nav-link" href="/admin/productos">Productos</a></li>
                            <li class="nav-item"><a class="nav-link" href="/admin/usuarios">Usuarios</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="/comprador">Productos</a></li>
                            <li class="nav-item"><a class="nav-link" href="/comprar">Comprar</a></li>
                        }
                        <li class="nav-item"><a class="nav-link text-danger" href="/logout">Cerrar sesión</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" href="/">Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/registro">Registro</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center text-muted py-3 mt-5">
        <small>© 2025 ADA S.A.S - Sistema de Carrito de Compras</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
