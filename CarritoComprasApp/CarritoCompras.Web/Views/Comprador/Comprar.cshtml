@model CarritoCompras.Web.Models.Producto

@{
    ViewData["Title"] = "Confirmar Compra";
}

<h2>Confirmar Compra</h2>

<div class="card p-4">
    <h4>@Model.Nombre</h4>
    <p>@Model.Descripcion</p>
    <p><strong>Disponible:</strong> @Model.Cantidad unidad(es)</p>
    <p><strong>Solicitado:</strong> @ViewBag.CantidadSolicitada unidad(es)</p>

    @if (ViewBag.ConfirmarConStockDisponible == true)
    {
        <div class="alert alert-warning">
            @ViewBag.Mensaje
        </div>
        <form asp-action="ComprarConfirmado" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="hidden" name="cantidad" value="@ViewBag.CantidadDisponible" />
            <button type="submit" class="btn btn-warning">SÃ­, comprar @ViewBag.CantidadDisponible unidad(es)</button>
        </form>
    }
    else
    {
        <form asp-action="ComprarConfirmado" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="hidden" name="cantidad" value="@ViewBag.CantidadSolicitada" />
            <button type="submit" class="btn btn-primary">Confirmar Compra</button>
        </form>
    }
</div>
