@model List<CarritoCompras.Web.Models.Producto>

@{
    ViewData["Title"] = "Productos Disponibles";
}

<h2 class="mb-4">Productos Disponibles</h2>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Cantidad Disponible</th>
            <th>Comprar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Id</td>
                <td>@producto.Nombre</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Cantidad</td>
                <td>
                    <form asp-controller="Comprador" asp-action="Comprar" method="get">
                        <input type="hidden" name="id" value="@producto.Id" />
                        <input type="number" name="cantidad" class="form-control mb-2" min="1" max="@producto.Cantidad" required />
                        <button type="submit" class="btn btn-success btn-sm">Comprar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
