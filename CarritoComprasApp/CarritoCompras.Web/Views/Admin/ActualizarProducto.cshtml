@model CarritoCompras.Web.Models.Producto

@{
    ViewData["Title"] = "Actualizar Producto";
}

<h2>Actualizar Producto</h2>

<form method="post" asp-action="ActualizarProducto">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group">
        <label>Nombre</label>
        <input type="text" value="@Model.Nombre" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label>Descripci√≥n</label>
        <input type="text" value="@Model.Descripcion" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label>Cantidad actual: @Model.Cantidad</label>
    </div>

    <div class="form-group">
        <label>Nueva cantidad</label>
        <input type="number" name="cantidad" min="0" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Actualizar</button>
    <a asp-action="Productos" class="btn btn-secondary mt-3">Cancelar</a>
</form>
