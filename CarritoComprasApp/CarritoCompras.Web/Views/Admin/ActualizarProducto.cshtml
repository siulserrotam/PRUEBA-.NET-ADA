@{
    ViewData["Title"] = "Actualizar Producto";
}

<h2 class="mb-4">Actualizar Cantidad de Producto</h2>

<form asp-action="ActualizarProducto" method="post">
    <div class="form-group mb-3">
        <label for="cantidad">Nueva Cantidad</label>
        <input type="number" class="form-control" id="cantidad" name="cantidad" required min="0" />
    </div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}
