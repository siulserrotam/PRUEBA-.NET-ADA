@model List<CarritoCompras.Web.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios Compradores";
}

<h2 class="mb-4">Usuarios Compradores</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombres</th>
                <th>Identificación</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Rol</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Nombres</td>
                <td>@usuario.Identificacion</td>
                <td>@usuario.UsuarioLogin</td>
                <td>@usuario.Telefono</td>
                <td>@usuario.Direccion</td>
                <td>@usuario.Rol</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No hay usuarios compradores registrados.</div>
}
