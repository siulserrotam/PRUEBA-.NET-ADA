@model List<CarritoCompras.Web.Models.Transaccion>

<h2>Transacciones realizadas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Usuario</td>
                <td>@t.Producto.Nombre</td>
                <td>@t.Cantidad</td>
                <td>@t.Fecha.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>
