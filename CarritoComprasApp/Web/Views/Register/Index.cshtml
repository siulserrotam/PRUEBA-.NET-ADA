@model Domain.Models.Usuario
@{
    ViewData["Title"] = "Registro de Usuario";
}

<h2>Registro de Usuario</h2>

<form id="formRegistro" asp-action="Index" method="post">
    <div class="form-group">
        <label>Nombres</label>
        <input asp-for="Nombres" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Dirección</label>
        <input asp-for="Direccion" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Teléfono</label>
        <input asp-for="Telefono" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Usuario</label>
        <input asp-for="UsuarioLogin" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Identificación</label>
        <input asp-for="Identificacion" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Contraseña</label>
        <input asp-for="Clave" class="form-control" type="password" required />
    </div>

    <button type="submit" class="btn btn-success">Registrarse</button>
</form>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-warning mt-3">@ViewBag.Mensaje</div>
}

@section Scripts {
    <script src="~/js/validaciones.js"></script>
    <script>
        document.getElementById("formRegistro").addEventListener("submit", function (e) {
            if (!validarRegistro()) {
                e.preventDefault(); // Evita el envío si hay errores
            }
        });
    </script>
}
