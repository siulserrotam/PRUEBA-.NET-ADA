@model List<Domain.Models.Producto>

@{
    ViewData["Title"] = "Productos disponibles";
}

<h2>Productos Disponibles</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Cantidad</th>
            <th>Comprar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nombre</td>
                <td>@p.Descripcion</td>
                <td>@p.CantidadDisponible</td>
                <td>
                    <form asp-controller="Cliente" asp-action="ConfirmarCompra" method="get">
                        <input type="hidden" name="id" value="@p.Id" />
                        <button class="btn btn-primary" type="submit">Comprar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
